{{define "table_header"}}
	<div class="table_header">
		<div class="table_cell id">ID</div>
		<div class="table_cell">Time</div>
	</div>
{{end}}

<html>
	<head>
		<meta charset="UTF-8"/>
		<title>Generated by Gravity Presenter</title>
		<style>
			body {
				margin: 0px;
			}

			.panel {
				padding: 10px;
				background: #222222;
				color: white;
			}

			.panel .header {
				padding: 0px 10px;
				display: inline;
				font-size: 24pt;
				font-weight: bold;
				text-transform: uppercase;
			}

			.panel .header .colorful {
				color: #dd0000;
			}

			.panel .subheader {
				display: inline;
				font-size: 11pt;
				color: #aaaaaa;
			}

			.table {
				display: table;
				width: 100%;
			}

			.table_header {
				 display: table-row;
				 background-color: #444444;
				 color: white;
				 box-shadow: 0px 5px 5px rgba(0,0,0,.2);
			}

			.table_header .table_cell:hover {
				 background-color: #555555;
			}

			.table_row {
				 display: table-row;
			}

			.table_row:nth-child(odd) {
				background: #f5f5f5;
			}

			.table_row:hover {
				background: #cc0000;
				color: white;
			}

			.table_cell {
				padding: 8px;
				display: table-cell;
			}

			.table_cell.id {
				text-align: right;
				width: 100px;
			}

			.table_header .table_cell:nth-child(n-1) {
				border-right: 1px solid #333333;
			}

			.table_row .table_cell:nth-child(n-1) {
				border-right: 1px solid #dddddd;
			}

		</style>
	</head>
	<body>
		<div class="panel">
			<div class="header"><span class="colorful">Database</span> Records</div>
			<div class="subheader">Generated by Brobridge Gravity Presenter</div>
		</div>

		<div class="table">
			{{template "table_header"}}

			{{range .Records}}
				<div class="table_row">
					<div class="table_cell id">{{._id}}</div>
					<div class="table_cell">{{.Time}}</div>
				</div>
			{{end}}
		</div>

	</body>
</html>
